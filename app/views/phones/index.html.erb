<div class="container pt-5 pb-5">
  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">Phones</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Generation</th>
          <th>Model title</th>
          <th>Images</th>
          <th>Videos</th>
          <th>Overview</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @phones.each do |phone| %>
          <tr>
            <td class="align-middle"><%= phone.id %></td>
            <td class="align-middle"><%= phone.generation_id %></td>
            <td class="align-middle"><%= phone.model_title %></td>

            <td class="align-middle">
              <% phone.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% phone.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><small class="text-muted"><%= phone.model_overview %></small></td>

            <td class="align-middle"><%= link_to 'Show', phone, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_phone_path(phone), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Phone', new_phone_path, class: 'text-decoration-none' %>
  </div>
</div>
