<div class="sign_in-page pt-3 pb-5">

  <div class="container">
    <div class="row">
      <div class="col-7">
        <div class="bg-white p-5 shadow mt-5">

          <h5 class="mb-5">Sign in</h5>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="mb-3">
              <%= f.label :login %>
              <%= f.text_field :login, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="mb-3">
              <div class="row ml-1">
                <%= f.submit "Sign in", class: 'btn btn-success btn-sm mr-2' %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-6">
        <div class="card p-5 shadow">
          <small><%= render "devise/shared/links" %></small>
        </div>
      </div>
    </div>
  </div>
</div>
